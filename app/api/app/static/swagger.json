{
  "swagger": "2.0",
  "info": {
    "title": "API de Registro de Sensores",
    "description": "API REST para registrar valores enviados por sensores identificados mediante un `usuario_id`. Los datos se almacenan en una base PostgreSQL.",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/sensor": {
      "post": {
        "tags": ["Sensores"],
        "summary": "Registrar un nuevo valor desde un sensor",
        "description": "Este endpoint recibe el valor enviado por un sensor identificado con `usuario_id` y lo almacena en la base de datos.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "payload",
            "description": "Datos enviados por el sensor",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "usuario_id": {
                  "type": "integer",
                  "example": 12,
                  "description": "Identificador único del sensor"
                },
                "valor": {
                  "type": "number",
                  "example": 23.5,
                  "description": "Valor numérico enviado por el sensor"
                }
              },
              "required": ["usuario_id", "valor"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Registro insertado correctamente",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string", "example": "ok" }
              }
            }
          },
          "400": {
            "description": "Error en los datos enviados",
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string", "example": "usuario_id y valor son obligatorios" }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {},
  "tags": [
    {
      "name": "Sensores",
      "description": "Operaciones relacionadas con la recepción y registro de datos de sensores"
    }
  ]
}
